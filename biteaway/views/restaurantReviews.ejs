    <!-- css file -->
    <link rel="stylesheet" href="static/restaurant.css">
</head>

<body>

    <div class="container border-bottom profile-col">
        <!-- header ( & search bar) -->
        <div class="row">
            <!-- logo -->
            <div class="col-2">
                <img id="logo" src="logo.png">
            </div>
            <!-- search bar -->
            <div class="col search-bar">
                <nav class="navbar navbar-light">
                    <form class="form-inline">
                        <img src="static/location_on_24dp_F59A4C_FILL0_wght400_GRAD0_opsz24.svg" class="img-thumbnail">
                        <input class="form-control" type="search" placeholder="City" aria-label="Search">
                        <form class="form-inline">
                            <button class="btn btn-outline-success" type="submit">
                                <img src="static/search_24dp_F59A4C_FILL0_wght400_GRAD0_opsz24.svg" class="img-thumbnail">
                            </button>
                            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                        </form>
                </nav>
            </div>
            <!-- login button -->
            <div class="col-2 profile-label-2">
                <h2>LOG IN</h2>
            </div>
        </div>

    </div>

    <!-- main container box for page components -->
    <div class="container profile-content-box shadow p-3">

        <!-- restaurant profile -->
        <div class="row">
            <!-- name & other details -->
            <div class="col">
                <h2 class="profile-label">Weekend Garage</h2>
                <p class="profile-label-2">Cafe, Breakfast</p>
                <p class="profile-label-2">Vivid Street, Tokyo</p>
                <p class="profile-label-2">Open 10AM-10PM | ### </p>
            </div>
            <!-- ratings -->
            <div class="col-3 ratings">
                <p class="profile-label-2" style="float:right; padding-right: 120px">Dining Ratings</p>
                <div style="display: inline-block;" class="col-2 stars">
                    <p class="rating-label">4.9</p>
                    <span class="fa fa-star checked"></span>
                </div>
            </div>
        </div>
        <!-- photo gallery -->
        <div class="row gallery">
            <div class="col">
                <img src="static/rest1.jpg" />
                <img src="static/rest2.jpeg" />
                <img src="static/rest3.jpg" />
            </div>
        </div>

        <!-- nav bar -->
        <nav class="col-10 navbar navbar-light navbar-expand">
            <!-- <div class="collapse navbar-collapse" id="navbarNavAltMarkup"> -->
            <div class="navbar-nav">
                <a class="nav-item nav-link active profile-label-2" href="./restaurant2.html">Overview <span
                        class="sr-only">(current)</span></a>
                <a class="nav-item nav-link profile-label-2" href="./menu2.html">Menu</a>
                <a class="nav-item nav-link profile-label-2" href="./reviews2.html">Reviews</a>
                <a class="nav-item nav-link profile-label-2" href="#">Photos</a>
                <!-- </div> -->
            </div>
        </nav>

        <div class="container">
            <!-- overview -->
            <div class="row">
                <!-- details -->
                <div class="col border">
                    <p class="categories">User Reviews</p>

                    <div class="profile-reviews shadow p-3">
                        <!-- name of reviewer -->
                        <p class="review-title-text">Jon Smith</p>
                        <!-- stars (static for now)-->
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <!-- review text -->
                        <p class="review-body pr-10 pl-10">
                            Love the pancakes!
                        </p>
                    </div>
                  
                    <div class="profile-reviews shadow p-3">
                        <!-- name of reviewer -->
                        <p class="review-title-text">Bob Banana</p>
                        <!-- stars (static for now)-->
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <!-- review text -->
                        <p class="review-body pr-10 pl-10">
                            Favorite breakfast spot in town!
                        </p>
                    </div>
                </div>
                <!-- directions -->
                <div class="col-3">
                    <!-- button to maps -->
                    <a class="btn btn-primary" href="https://maps.app.goo.gl/TeEyLYUXbMmF4tzZ7" target="_blank"
                        role="button">MAP</a>
                </div>
            </div>
        </div>

        <!-- keep this here for the bootstrap -->
