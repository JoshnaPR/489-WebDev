<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track Your Order | Bite-A-Way</title>
    <link rel="stylesheet" href="../static/css/userOrderTracking.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="checkout-header">
            <h1>Track Your Order</h1>
            <div class="checkout-steps">
                <div class="step active">
                    <div class="step-number">1</div>
                    <span>Shopping Cart</span>
                </div>
                <div class="step-connector active"></div>
                <div class="step active">
                    <div class="step-number">2</div>
                    <span>Checkout</span>
                </div>
                <div class="step-connector active"></div>
                <div class="step active">
                    <div class="step-number">3</div>
                    <span>Confirmation</span>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div class="tracking-container">
            <!-- Tracking Form (Only show if no order is being tracked) -->
            <div class="tracking-form" style="display: none;">
                <h2>Track Your Order</h2>
                <form action="/track-order" method="POST" id="trackingForm">
                    <div class="form-group">
                        <label for="order-number">Order Number</label>
                        <input type="text" id="order-number" name="orderNumber" class="form-control" placeholder="e.g. BAW-123456" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email address" required>
                    </div>
                    <button type="submit" class="btn">Track Order</button>
                </form>
            </div>
            
            <!-- Order Details (Only show if tracking an order) -->
            <div class="order-details">
                <h2>Order Details <span class="order-number">#BAW-123456</span></h2>
                
                <div class="order-summary">
                    <div class="summary-card">
                        <h3>Order Date</h3>
                        <p>April 12, 2025</p>
                    </div>
                    <div class="summary-card">
                        <h3>Estimated Delivery</h3>
                        <p>April 12, 2025 (7:30 PM - 8:00 PM)</p>
                    </div>
                    <div class="summary-card">
                        <h3>Status</h3>
                        <p>Food Preparation</p>
                    </div>
                    <div class="summary-card">
                        <h3>Total Amount</h3>
                        <p>$42.97</p>
                    </div>
                </div>
                
                <!-- Shipping Address -->
                <div class="delivery-address">
                    <h3>Delivery Address</h3>
                    <p>John Doe</p>
                    <p>123 Main Street, Apt 4B</p>
                    <p>New York, NY 10001</p>
                    <p>United States</p>
                    <p><strong>Phone:</strong> (123) 456-7890</p>
                    <p><strong>Note:</strong> Please leave the order at the front desk.</p>
                </div>
                
                <!-- Tracking Progress -->
                <div class="tracking-progress">
                    <h3>Order Progress</h3>
                    
                    <div class="progress-line">
                        <div class="progress-line-fill" style="height: 40%"></div>
                    </div>
                    
                    <div class="progress-steps">
                        <div class="progress-step step-completed">
                            <div class="step-icon">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="step-content">
                                <div class="step-date">April 12, 2025, 6:05 PM</div>
                                <div class="step-title">Order Confirmed</div>
                                <div class="step-description">Your order has been received and confirmed</div>
                            </div>
                        </div>
                        
                        <div class="progress-step step-active">
                            <div class="step-icon">
                                <i class="fas fa-utensils"></i>
                            </div>
                            <div class="step-content">
                                <div class="step-date">April 12, 2025, 6:10 PM</div>
                                <div class="step-title">Food Preparation</div>
                                <div class="step-description">Your food is being prepared by our chefs</div>
                            </div>
                        </div>
                        
                        <div class="progress-step">
                            <div class="step-icon">
                                <i class="fas fa-box"></i>
                            </div>
                            <div class="step-content">
                                <div class="step-date">Upcoming</div>
                                <div class="step-title">Food Ready for Pickup</div>
                                <div class="step-description">Your order is ready and waiting for the delivery driver</div>
                            </div>
                        </div>
                        
                        <div class="progress-step">
                            <div class="step-icon">
                                <i class="fas fa-motorcycle"></i>
                            </div>
                            <div class="step-content">
                                <div class="step-date">Upcoming</div>
                                <div class="step-title">Out for Delivery</div>
                                <div class="step-description">Your order is on the way with our delivery partner</div>
                            </div>
                        </div>
                        
                        <div class="progress-step">
                            <div class="step-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="step-content">
                                <div class="step-date">Expected by 8:00 PM</div>
                                <div class="step-title">Delivered</div>
                                <div class="step-description">Your order has been delivered successfully</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Order Items -->
                <div class="order-items">
                    <h3>Order Items</h3>
                    <table class="order-items-table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center;">
                                        <img src="https://via.placeholder.com/60" alt="Margherita Pizza" class="item-image">
                                        <div class="item-details" style="margin-left: 15px;">
                                            <h4>Margherita Pizza</h4>
                                            <p>Classic cheese and tomato</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="item-quantity">1</td>
                                <td class="item-price">$15.99</td>
                                <td class="item-price">$15.99</td>
                            </tr>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center;">
                                        <img src="https://via.placeholder.com/60" alt="Garlic Breadsticks" class="item-image">
                                        <div class="item-details" style="margin-left: 15px;">
                                            <h4>Garlic Breadsticks</h4>
                                            <p>With marinara dipping sauce</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="item-quantity">2</td>
                                <td class="item-price">$5.99</td>
                                <td class="item-price">$11.98</td>
                            </tr>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center;">
                                        <img src="https://via.placeholder.com/60" alt="Chocolate Brownie" class="item-image">
                                        <div class="item-details" style="margin-left: 15px;">
                                            <h4>Chocolate Brownie</h4>
                                            <p>With vanilla ice cream</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="item-quantity">1</td>
                                <td class="item-price">$7.99</td>
                                <td class="item-price">$7.99</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Order Summary -->
                <div class="order-summary-details" style="margin-top: 30px;">
                    <h3>Payment Summary</h3>
                    <div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; margin-top: 15px;">
                        <div class="summary-row" style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                            <span>Subtotal</span>
                            <span>$35.96</span>
                        </div>
                        <div class="summary-row" style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                            <span>Delivery Fee</span>
                            <span>$3.99</span>
                        </div>
                        <div class="summary-row" style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                            <span>Tax</span>
                            <span>$3.02</span>
                        </div>
                        <div class="summary-row" style="display: flex; justify-content: space-between; margin-bottom: 10px; color: var(--success-color);">
                            <span>Promo (WELCOME10)</span>
                            <span>-$0.00</span>
                        </div>
                        <div class="summary-row" style="display: flex; justify-content: space-between; padding-top: 10px; border-top: 1px solid #e1e5eb; font-weight: bold; font-size: 18px; color: var(--secondary-color);">
                            <span>Total</span>
                            <span>$42.97</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Delivery Map -->
            <div class="delivery-map">
                <h3>Delivery Location</h3>
                <div class="map-container">
                    <div class="map-placeholder">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>Map view will be available when your order is out for delivery</p>
                    </div>
                </div>
            </div>
            
            <!-- Customer Support -->
            <div class="customer-support">
                <h3>Need Help with Your Order?</h3>
                <p>If you have any questions or concerns about your order, please contact our customer support team.</p>
                
                <div class="support-options">
                    <div class="support-option">
                        <i class="fas fa-comments"></i>
                        <h4>Live Chat</h4>
                        <p>Chat with our customer service team</p>
                    </div>
                    
                    <div class="support-option">
                        <i class="fas fa-phone-alt"></i>
                        <h4>Call Us</h4>
                        <p>1-800-BITEAWAY</p>
                    </div>
                    
                    <div class="support-option">
                        <i class="fas fa-envelope"></i>
                        <h4>Email</h4>
                        <p>support@biteaway.com</p>
                    </div>
                </div>
            </div>
            
            <!-- Back to Orders Button -->
            <a href="/my-orders" class="back-to-orders">
                <i class="fas fa-arrow-left"></i> Back to My Orders
            </a>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Toggle between tracking form and order details (for demo purposes)
        function toggleTrackingView() {
            const trackingForm = document.querySelector('.tracking-form');
            const orderDetails = document.querySelector('.order-details');
            const deliveryMap = document.querySelector('.delivery-map');
            const customerSupport = document.querySelector('.customer-support');
            
            if (trackingForm.style.display === 'none') {
                trackingForm.style.display = 'block';
                orderDetails.style.display = 'none';
                deliveryMap.style.display = 'none';
                customerSupport.style.display = 'none';
            } else {
                trackingForm.style.display = 'none';
                orderDetails.style.display = 'block';
                deliveryMap.style.display = 'block';
                customerSupport.style.display = 'block';
            }
        }
        
        // Form submission handling
        document.addEventListener('DOMContentLoaded', function() {
            const trackingForm = document.getElementById('trackingForm');
            if (trackingForm) {
                trackingForm.addEventListener('submit', function(event) {
                    event.preventDefault();
                    // Here you would normally send an AJAX request to get order details
                    // For demo purposes, just toggle the view
                    toggleTrackingView();
                });
            }
        });
    </script>
</body>
</html>