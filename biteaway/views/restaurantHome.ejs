<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= restaurant.restaurantName %> | Bite-A-Way</title>

    <!-- Star Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/static/css/restaurant.css">
</head>

<body>

    <!-- Header -->
    <div class="container border-bottom profile-col py-3">
        <div class="row align-items-center">
            <div class="col-2">
                <img id="logo" src="/static/img/logo.png" class="img-fluid">
            </div>
            <div class="col">
                <nav class="navbar navbar-light">
                    <form class="form-inline d-flex align-items-center gap-2">
                        <img src="/static/img/location_on_24dp_F59A4C_FILL0_wght400_GRAD0_opsz24.svg" class="img-thumbnail" alt="Location Icon">
                        <input class="form-control" type="search" placeholder="City" aria-label="Search">
                        <button id="search-button" class="btn" type="submit">
                            <img src="/static/img/search_24dp_F59A4C_FILL0_wght400_GRAD0_opsz24.svg" alt="Search Icon">
                        </button>
                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                    </form>
                </nav>
            </div>
        </div>
    </div>

    <!-- Restaurant Content -->
    <div class="container profile-content-box shadow p-4 mt-3">

        <!-- Profile Header -->
        <div class="row mb-4">
            <div class="col">
                <h2 class="profile-label"><%= restaurant.restaurantName %></h2>
                <p class="profile-label-2">
                    <% cuisines.forEach((cuisine, index) => { %>
                        <%= cuisine.cuisineType %><%= index !== cuisines.length - 1 ? ', ' : '' %>
                    <% }) %>
                </p>
                <p class="profile-label-2"><%= restaurant.restaurantAddress %></p>
                <p class="profile-label-2">Open <%= restaurant.openingTime %> - <%= restaurant.closingTime %> | <%= restaurant.phoneNumber %></p>
            </div>
            <div class="col-3 text-end">
                <p class="profile-label-2">Dining Ratings</p>
                <p class="rating-label"><%= restaurant.restaurantRating %></p>
                <div class="d-flex justify-content-end">
                    <% for (let i = 1; i <= 5; i++) { %>
                        <% if (restaurant.restaurantRating >= i) { %>
                            <span class="fa fa-star checked"></span>
                        <% } else if (restaurant.restaurantRating >= i - 0.5) { %>
                            <span class="fa fa-star-half-o checked"></span>
                        <% } else { %>
                            <span class="fa fa-star unchecked"></span>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Gallery -->
        <div class="row gallery mb-4">
            <div class="col">
                <div class="d-flex flex-wrap gap-3">
                    <% for (let i = 1; i < 4; i++) { %>
                        <img src="/static/img/restaurant/home/<%= restaurant.restaurantID %>_<%= i %>.jpg" class="img-fluid" style="max-width: 300px;" />
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Navigation Bar -->
        <nav class="navbar navbar-light navbar-expand mb-4">
            <div class="navbar-nav">
                <a class="nav-item nav-link active profile-label-2" href="/restaurant/<%= restaurant.restaurantID %>">Overview</a>
                <a class="nav-item nav-link profile-label-2" href="/restaurant/<%= restaurant.restaurantID %>/menu">Menu</a>
                <a class="nav-item nav-link profile-label-2" href="/restaurant/<%= restaurant.restaurantID %>/reviews">Reviews</a>
            </div>
        </nav>

        <!-- Overview Details -->
        <div class="row">
            <div class="col border p-3">

                <p class="categories">Cuisines</p>
                <% cuisines.forEach(cuisine => { %>
                    <p><%= cuisine.cuisineType %></p>
                <% }) %>

                <p class="categories">Chef Recommendations</p>
                <% if (items && items.length > 0) { %>
                    <% for (let i = 0; i < Math.min(2, items.length); i++) { %>
                        <p><%= items[i].itemName %></p>
                    <% } %>
                <% } else { %>
                    <p>No recommendations available.</p>
                <% } %>

                <p class="categories">More Info</p>
                <p>Open Late</p>
                <p>Family-Owned</p>

                <p class="categories">Average Cost</p>
                <p>$10 per person</p>

                <p class="categories">Menu Photo</p>
                <img src="/static/img/restaurant/menu/<%= restaurant.restaurantID %>.jpg" class="img-fluid" style="max-width: 300px;" />
            </div>

            <!-- Maps Button -->
            <div class="col-3 d-flex align-items-center justify-content-center">
                <a class="btn btn-primary" href="https://maps.app.goo.gl/TeEyLYUXbMmF4tzZ7" target="_blank" role="button">MAP</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>